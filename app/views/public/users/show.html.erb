<% if @user == current_user %>
  <h1 class="col-xs-2 col-sm-12 col-md-12 text-center border-bottom p-1">マイページ</h1>
<% else %>
  <h1 class="text-center m-5 border-bottom p-1"><%= @user.family_name %>さんのページ</h1>
<% end %>
<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6">
      <h2 class ="text-center m-5 border-bottom p-1">投稿一覧</h2>
      <div class="container text-center">
        <div class="row">
          <% @books.each do|book| %>
            <div class="col-xs-2 col-sm-8 col-md-4 mt-2">
              <%= link_to book_path(book) do %>
                <%= image_tag book.get_book_image(100,100), class: "mx-auto d-block img-fluid" %>
              <% end %>
            </div>
            <div class=" text_area col-xs-12 col-sm-12 col-md-8 text-left mt-2">
              タイトル:
              <%= link_to book_path(book) do %>
                <%= book.name %><br>
              <% end %>
                <p class=mt-2>紹介:<%= book.introduction %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-6">
      <h2 class ="text-center m-5 border-bottom p-1">会員詳細</h2>
      <div class="container text-center">
        <div class="row">
          <div class="col-xs-2 col-sm-8 col-md-4 mt-2">
            <p><%= image_tag @user.get_user_image(100,100), class: "mx-auto d-block img-fluid" %></p>
          </div>
          <div class="text_area col-xs-12 col-sm-12 col-md-8 text-left mt-2">
            名前: <%= @user.family_name %>  <%= @user.first_name %><br>
            <p class="mt-2">紹介: <%= @user.introduction %></p>
          </div>
        </div>
      </div>
        <div class="mt-5">
          <%= link_to ' 編集する ', edit_user_path(@user), class: "btn btn-primary" %>
        </div>
    </div>
  </div>
</div>
</div>