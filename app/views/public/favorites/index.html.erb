<h1 class="text-center m-5 border-bottom p-1">お気に入り一覧</h1>
<div class="container">
  <div class="row">
    <% if @books.count == 0 %>
      <p>お気に入りはありません</p>
    <% else %>
      <% @books.each do |book| %>
        <div class="col-3">
          <p><%= book.name %></p>
          <p><%= image_tag book.get_book_image(100,100) %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>