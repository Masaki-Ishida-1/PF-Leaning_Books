<h1 class="text-center border-bottom p-1">お気に入り一覧</h1>
<div class="container">
  <div class="row">
    <% if @books.count == 0 %>
      <p>お気に入りはありません</p>
    <% else %>
      <% @books.each do |book| %>
        <div class="col-xs-6 col-sm-4 col-md-3 mr-2 mt-2 text-center img-thumbnail">
          <%= link_to book_path(book) do %>
            <p><%= book.name %></p>
            <p><%= image_tag book.get_book_image(100,100), class: "mx-auto d-block img-fluid" %></p>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>