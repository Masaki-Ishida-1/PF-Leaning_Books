<h1 class="col-xs-2 col-sm-12 col-md-12 text-center border-bottom p-1">書籍編集</h1>
<%= form_with model: @book,local: true do |f| %>
  <div class="container">
    <div class="row mt-2">
      <div class="col-xs-10 col-sm-6 col-md-6">
      </div>
      <div class="col-xs-10 col-sm-10 col-md-6 mt-2">
        <%= f.file_field :book_image, class: "image_form", accept: "image/*" %>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-xs-10 col-sm-10 col-md-10">
        <%= f.label :name,'タイトル', class: 'col-form-label' %>
      </div>
      <div class="col-xs-4 col-sm-4 col-md-4">
        <%= f.text_field :name, autocomplete: "name", class: "form-control",placeholder: 'タイトル' %>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-xs-10 col-sm-10 col-md-10">
        <%= f.label :introduction,'紹介文', class: 'col-form-label' %>
      </div>
      <div class="col-xs-9 col-sm-12 col-md-9">
        <%= f.text_area :introduction,:size => "30x5", class: "form-control",placeholder: '紹介文 最大200文字' %>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-xs-10 col-sm-10 col-md-10">
        <%= f.label :star,'評価 ', class: 'col-3 col-form-label' %>
      </div>
    </div>
    <div class="row" id="star">
      <%= f.hidden_field :star, id: :review_star %>
    </div>
    <div class="row mt-5">
      <div class="col-4">
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-4 text-right">
        <%= f.submit ' 完了 ', class: "btn btn-success" %>
      </div>
      <div class="col-6 text-center">
        <%= link_to "削除する", book_path, method: :delete, class: "btn btn-sm btn-danger" %>
      </div>
    </div>
  </div>
  <script>
　　$('#star').empty();
    $('#star').raty({
      size     : 36,
      starOff:  '<%= asset_path('star-off.png') %>',
      starOn : '<%= asset_path('star-on.png') %>',
   　 　　　scoreName: 'book[star]',
      half: false,
    });
  </script>
<% end %>
