<div class="container">
  <div class ="row">
    <h1 class=" col-6 text-center m-5 border-bottom p-1">人気一覧</h1>
    <div class="col-4 mt-5">
      <%= render "public/searches/search-btn" %>
    </div>
</div>
  <div class="row mt-3">
      <% @ranks.each do |rank| %>
        <div class ="mr-5">
          <p><%= rank.name %></p>
          <p><%= image_tag rank.get_book_image(100,100) %></p>
        </div>
      <% end %>
  </div>
  <div class="row">
    <div class="col-6 text-center">
      <h2 class ="text-center m-5 border-bottom p-1">書籍一覧</h2>
    </div>
  </div>
  <div class="row">
    <% @books.each do|book| %>
      <div class="col-3">
        <%= link_to book_path(book) do %>
          <p><%= book.name %></p>
          <p><%= image_tag book.get_book_image(100,100) %></p>
        <% end %>
        <p>投稿者:<%= book.user.family_name %></p>
        <div><%= render "public/favorites/favorite", book: book %></div>
          <div id="star-rate<%= book.id %>">
        <script>
          $('#star-rate<%= book.id %>').empty();
          $('#star-rate<%= book.id%>').raty({
             size      : 36,
             starOff   : '<%= asset_path('star-off.png') %>',
             starOn    : '<%= asset_path('star-on.png') %>',
             half      : false,
             readOnly: true,
             score: <%= book.star %>,
           });
         </script>
      </div>
    <% end %>
  </div>
</div>
