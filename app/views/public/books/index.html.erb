<h1 class="text-center m-5 border-bottom p-1">人気一覧</h1>
<div class="container">
  <div class="row">

  </div>
  <div class="row">
    <div class="col-6 text-center">
      <h2>書籍一覧</h2>
    </div>
    <div class="col-6 text-center">
      <%= render "public/searches/search-btn" %>
    </div>
  </div>
  <div class="row">
    <% @books.each do|book| %>
      <div class="col-3">
        <%= link_to book_path(book) do %>
          <p><%= book.name %></p>
          <p><%= image_tag book.get_book_image(100,100) %></p>
        <% end %>
        <p>投稿者:<%= book.user.name %></p>
        <div><%= render "public/favorites/favorite", book: book %></div>
      </div>
    <% end %>
  </div>
</div>