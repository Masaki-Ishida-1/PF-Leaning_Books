<h1 class=" col-xs-2 col-sm-12 col-md-12 text-center mt-5 border-bottom p-1">書籍詳細</h1>
<div class="container">
  <div class="row mt-5">
    <div class="col-xs-2 col-sm-8 col-md-5 text-left">
      <p><%= image_tag @book.get_book_image(400,400), class: "mx-auto d-block img-fluid" %></p>
      <p class="text-left">投稿者:<%= @book.user.family_name %></p>
    </div>
    <div class="col-xs-8 col-sm-10 col-md-7 text-center">
      <div class="row">
        <div class="col-6">
          <p class="text_sub">タイトル</p>
        </div>
        <div class="col-6 text-left">
          <p><%= @book.name %></p>
        </div>
        <div class="col-6">
          <p class="text_sub">紹介</p>
        </div>
        <div class="col-6 text-left">
          <p><%= @book.introduction %></p>
        </div>
        <div class="col-6 text-center">
          <p class="text_sub">お気に入り</p>
        </div>
        <div class="col-6 text-left">
          <div id="favorite_buttons_<%= @book.id %>">
            <%= render "public/favorites/favorite", book: @book %>
          </div>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6 text-center">
          <p class="text_sub">評価</p>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6 text-left">
          <div id="star-rate<%= @book.id %>">
            <script>
              $('#star-rate<%= @book.id %>').empty();
              $('#star-rate<%= @book.id%>').raty({
                 size      : 36,
                 starOff   : '<%= asset_path('star-off.png') %>',
                 starOn    : '<%= asset_path('star-on.png') %>',
                 half      : false,
                 readOnly: true,
                 score: <%= @book.star %>,
               });
             </script>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-6 col-sm-5 col-md-5 text-center mt-3">
      <%= link_to '書籍一覧', books_path, class: "btn btn-success" %>
    </div>
    <div class="col-xs-6 col-sm-5 col-md-5 text-center mt-3">
      <%= link_to '編集する', edit_book_path(@book), class: "btn btn-success" %>
    </div>
  </div>
</div>