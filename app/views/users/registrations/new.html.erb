<div class="container container_session mt-5">
  <div class="row">
    <h3 class="p-3"><span class="header">新規会員登録</span></h3>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <form>
      <div class="form-group row">
        <%= f.label :名前, class:"col-sm-12 col-form-label" %>
        <%= f.label :（姓）, class:"col-sm-3 col-form-label" %>
          <div class="col-md-3">
           <%= f.text_field :family_name, autofocus: true, autocomplete: "name", placeholder: "姓", class: "form-control" %>
          </div>
           <%= f.label :（名）　 %>
          <div class="col-md-3">
           <%= f.text_field :first_name, autocomplete: "name", placeholder: "名", class: "form-control" %>
          </div>
      </div>

      <div class="form-group row">
        <%= f.label :フリガナ, class:"col-sm-12 col-form-label" %>
        <%= f.label :（セイ）, class:"col-sm-3 col-form-label" %>
         <div class="col-md-3">
          <%= f.text_field :family_name_kana, autocomplete: "name", placeholder: "セイ", class: "form-control" %>
         </div>
          <%= f.label :（メイ） %>
         <div class="col-md-3">
          <%= f.text_field :first_name_kana, autocomplete: "name", placeholder: "メイ", class: "form-control" %>
         </div>
      </div>

      <div class="form-group row">
          <%= f.label :メールアドレス, class: "col-sm-12 col-md-3 col-form-label" %>
        <div class="col-xs-6 col-sm-12 col-md-6">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :パスワード（６文字以上）, class: "col-sm-12 col-md-3 col-form-label" %>
        <div class="col-md-3">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :パスワード（確認用）, class:"col-sm-12 col-md-3 col-form-label" %>
        <div class="col-md-3">
         <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>

      <div class="form-goup row">
        <div class="col-xs-4 col-sm-4 col-md-4 mt-3 offset-4 center-block">
          <%= f.submit "新規登録", class:"btn btn-success btn-block btn-sm" %>
        </div>
      </div>
    </form>
  <% end %>

  <div class="row mt-5">
    <div class="col-xs-6 col-sm-6 col-md-6 offset-2">
      <h6 class="text-center">既に登録済みの方</h6>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-xs-8 col-sm-8 col-md-8 offset-3 text-center">
      <%= link_to "こちら", new_user_session_path %> からログインしてください。
    </div>
  </div>
</div>