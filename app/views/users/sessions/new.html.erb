<div class="container container_session">
  <div class="row">
    <h3 class="p-3"><span class="header">ログイン</span></h3>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <form>
      <div class="form-group row">
        <%= f.label :メールアドレス, class: "col-sm-12 col-md-3 col-form-label col-form-label" %>
        <div class="col-md-5">
         <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :パスワード, class: "col-sm-12 col-md-3 col-form-label col-form-label" %>
        <div class="col-md-5">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-4 col-md-4 offset-4 center-block text-center mt-4">
          <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-sm" %>
        </div>
      </div>
    </form>
  <% end %>

  <div class="row mt-5">
    <div class="col-xs-12 col-sm-12 col-md-12">
      <h6 class ="text-center">会員登録がお済みでない方</h6>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-xs-12 col-sm-12 col-md-12 text-center">
     <%= link_to "こちら", new_user_registration_path %> から新規登録を行ってください。
    </div>
  </div>
</div>