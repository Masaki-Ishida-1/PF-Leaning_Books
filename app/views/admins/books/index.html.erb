<div class="container pt-5 px-sm-0">
  <div class="row">
    <div class="md-3">
      <h3>書籍一覧</h3>
    </div>
  </div>
  <div class="row">
    <table class="table table-hover table-bordered mt-5">
        <thead>
          <tr>
            <th>書籍ID</th>
            <th>画像</th>
            <th>タイトル</th>
            <th>紹介</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.id %></td>
              <td>
                <%= image_tag book.get_book_image(100,100) %>
              </td>
              <td>
                <%= link_to admins_book_path(book.id) do %>
                  <%= book.name %>
                <% end %>
              </td>
              <td>
                <%= book.introduction %>
              </td>
              <td>
                <%= link_to admins_book_path(book.id),method: :delete do %>
                  <p class="btn btn-danger">削除する</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
  <div class="row">
    <%= paginate @books %>
  </div>
</div>