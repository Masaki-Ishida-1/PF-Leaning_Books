<!--管理者会員詳細大枠-->
<div class="container pt-5 px-sm-0 text-center">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h3><%= @user.family_name %>  <%= @user.first_name %>さんの会員詳細</h3>
    </div>
  </div>
  <div class="row">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td><label>会員ID</label></td>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <td><label>氏名</label></td>
            <td><%= @user.family_name %>　<%= @user.first_name %></td>
          </tr>
          <tr>
            <td><label>フリガナ</label></td>
            <td><%= @user.family_name_kana %>　<%= @user.first_name_kana %></td>
          </tr>
          <tr>
            <td><label>メールアドレス</label></td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td><label>会員ステータス</label></td>
            <td>
              <% if @user.is_deleted == true %>
               <span class="label label-secondary">退会</span>
              <% else %>
               <span class="label label-success">有効</span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
        <div class="col-6 text-center">
          <%= link_to "編集する", edit_admins_user_path(@user), class: "btn btn-success" %>
        </div>
        <div class="col-6 text-left">
          <%= link_to "戻る", admins_users_path, class: "btn btn-primary ml-5" %>
        </div>
    </div>
  </div>