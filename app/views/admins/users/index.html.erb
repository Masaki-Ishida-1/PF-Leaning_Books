<!--管理者一覧大枠-->
<div class="container pt-5 px-sm-0">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h3>会員一覧</h3>
    </div>
  </div>
  <div class="row">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td>
              <%= link_to admins_users_path(customer.id) do %>
                <%= user.family_name %><%= user.first_name %>
              <% end %>
            </td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_deleted == true %>
                <span class="label label-secondary">退会</span>
              <% else %>
                <span class="label label-success">有効</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="">
    </div>
  </div>
</div>