<div class="container pt-5 px-sm-0 text-center">
  <div class="row">
    <div class="col-8 text-center">
      <h3><%= @user.family_name %>  <%= @user.first_name %>さんの会員情報編集</h3>
    </div>
  </div>
  <%= form_with model: @user,url: admins_user_path do |f| %>
    <div class="row mt-5">
      <div class="col-md-3">
        <%= f.label :会員ID %>
      </div>
      <div class ="col-md-5 text-left">
        <%= @user.id %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-md-3">
        <%= f.label :氏名 %>
      </div>
      <div class ="col-md-3">
        <%= f.text_field :family_name, autofocus: true, autocomplete: "name", class:"form-control",placeholder: '氏' %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :first_name, autocomplete: "name",  class:"form-control",placeholder: '名' %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-md-3">
        <%= f.label :フリガナ %>
      </div>
      <div class ="col-md-3">
        <%= f.text_field :family_name_kana, autocomplete: "name", class:"form-control" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :first_name_kana, autocomplete: "name",  class:"form-control" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-md-3">
        <%= f.label :メールアドレス %>
      </div>
      <div class ="col-md-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-md-3">
        <%= f.label :会員ステータス %>
      </div>
      <div class ="col-md-3">
        <%= f.radio_button :is_deleted, false %> 有効
        <%= f.radio_button :is_deleted, true %> 退会
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-md-6">
        <%= f.submit "変更を保存", class:"btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>